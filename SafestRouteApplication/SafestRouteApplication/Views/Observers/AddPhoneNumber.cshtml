@model SafestRouteApplication.Models.PhoneNumber
@{
    ViewBag.Title = "AddPhoneNumber";
}

<div class="HomePageHeader">
    <h2>Add / Remove a Phone Number</h2>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="SideBar">
            @Html.ActionLink(" • Edit Account Details", "Edit", "Observers", new { @class = "ActionClass" }) <br />
            @Html.ActionLink(" • View Account Information", "Details", "Observers", new { @class = "ActionClass" }) <br />
            @Html.ActionLink(" • Create/Remove an Avoidance Route", "AddCustomAvoidance", "Observers", new { @class = "ActionClass" })<br />
            @Html.ActionLink(" • View an Avoidance Route", "ViewAvoidanceRoute", "Observers", new { @class = "ActionClass" })<br />
        </div>
    </div>
    <div class="col-md-8">
        <h3>Add a Number</h3>
        @using (Html.BeginForm("AddPhoneNumber", "Observers"))
        {
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Phone Number To Add", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add Number" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <h3>@ViewBag.RemovalMessage</h3>
        @using (Html.BeginForm("RemovePhoneNumber", "Observers"))
        {
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Phone Number To Remove", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Remove Number" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>



