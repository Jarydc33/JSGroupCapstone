@model SafestRouteApplication.Models.PhoneNumber
@{
    ViewBag.Title = "AddPhoneNumber";
}

<h2>AddPhoneNumber</h2>
@using (Html.BeginForm("AddPhoneNumber", "Observers"))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Phone Number To Add", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Number" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<p>@ViewBag.RemovalMessage</p>
@using (Html.BeginForm("RemovePhoneNumber", "Observers"))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Phone Number To Remove", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Remove Number" class="btn btn-default" />
            </div>
        </div>
    </div>
}